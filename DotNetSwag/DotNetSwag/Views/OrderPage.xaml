<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DotNetSwag.OrderPage" Title="Capture Details">
    <ContentPage.Content>
        <StackLayout>

            <Label Text="Name"  FontAttributes="Bold" FontSize="18" Padding="30,10,30,10"/>
                <Frame Margin="0" Padding="3" CornerRadius="30">
            <Entry/>
                </Frame>
             <Label Text="Gender" FontAttributes="Bold" FontSize="18" Padding="30,0,30,0"/>
            <Entry/>
            <Label Text="T Shirt Size" FontAttributes="Bold" FontSize="18" Padding="30,0,30,0"/>
            <Entry/>
            <Label Text="Date of Order"  FontAttributes="Bold" FontSize="16" Padding="30,24,30,0"/>
            <DatePicker/>
            <Label Text="T-Shirt Color" FontAttributes="Bold" FontSize="18" Padding="30,0,30,0"/>
            <Entry/>
            <Label Text="Shipping Address" FontAttributes="Bold" FontSize="18" Padding="30,0,30,0"/>
            <Entry/>
            <Button x:Name=" SaveButton" Text="Save" BackgroundColor="Pink" CornerRadius="20" Clicked="SaveButton_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>